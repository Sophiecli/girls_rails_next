<h1>Here is a list of all ideas so far!</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @ideas.each do |idea| %>
    <tr>
      <td><%= idea.name %></td>
      <td><%= idea.description %></td>
      <td><%= idea.picture.present? %></td>
      <td><a class="btn btn-primary" href="/ideas/<%= idea.id %>/edit">Edit</a></td>
      <td><a class="btn btn-warning" href="/ideas/<%= idea.id %>">Show</a></td>
      <td><% if idea.picture %><a class="btn btn-info" href="/files/<%= idea.picture %>">View Picture</a><% end %></td>
      <td><% if idea.picture %><a class="btn btn-info" href="/files/<%= idea.picture %>/download">Download Picture</a><% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>